<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.reassured.reassuredmobileapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!--
        This release version has been designed to work with API commit:
            8134082714dbf124180222ed7b9527efd90d8156
        which is on the master branch.
    -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_transparent_background"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_transparent_background"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomePage">
        </activity>
        <activity android:name=".CompanyCalendar">
        </activity>
        <activity android:name=".ReassuredTravel">
        </activity>
        <activity android:name=".Meetings">
        </activity>
        <activity android:name=".MyReassured">
        </activity>
        <activity android:name=".ManageCalendarEvents">
        </activity>
        <activity android:name=".AddCalendarEvent">
        </activity>
        <activity android:name=".RegisterUser">
        </activity>
        <activity android:name=".MyMessages">
        </activity>
        <activity android:name=".UserSearchForMessages">
        </activity>
        <activity android:name=".CompanyBulletin">
        </activity>
        <activity android:name=".CreateNewMeeting">
        </activity>
        <activity android:name=".LiftSharingView">
        </activity>
        <service android:name=".MyLocationService">
        </service>
        <service
            android:name=".MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>